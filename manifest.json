{
  "manifest_version": 2,
  "name": "Textgain",
  "description": "Textgain Chrome extension.",
  "version": "1.0",
  "homepage_url": "https://www.textgain.com",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "img/logo.png"
  ],
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "index.html"
  }
}
